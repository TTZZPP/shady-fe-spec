{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules"]
}
